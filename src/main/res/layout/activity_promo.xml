<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/notobold"
                android:text="Promotions"
                android:textColor="#000000"
                android:textSize="30sp" />

        <TextView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preview: "
            android:textSize="15sp"
            android:layout_below="@+id/txt"
            android:layout_centerHorizontal="true"
            android:textColor="#000"
            android:layout_marginBottom="10dp"/>

    <ImageButton
        android:id="@+id/btnChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preview"
        android:layout_marginStart="55dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/img"
        android:background="#00D5551A"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:src="@drawable/ic_baseline_photo_camera_24"
        android:text="Pick image" />


    <ImageView
        android:id="@+id/img"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:layout_below="@+id/preview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="-126dp"
        android:background="#ACACAC" />



    <EditText
        android:id="@+id/edtName"
        android:layout_width="570dp"
        android:layout_height="80dp"
        android:background="@drawable/button"
        android:backgroundTint="#E3E3E3"
        android:layout_marginStart="15dp"
        android:hint="Message"
        android:padding="20dp"
        android:textColor="#272727"
        android:textColorHint="#595555"
        android:layout_centerVertical="true"/>


    <Button
        android:id="@+id/btnAdd"
        android:text="Add"
        android:textColor="#30491E"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnChoose"
        android:layout_toRightOf="@+id/img"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#00B600"

        android:src="@drawable/ic_baseline_add" />

    <Button
        android:id="@+id/listOpen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="View Promos"
        android:textSize="25dp"
        android:backgroundTint="#F15E1A"/>


</RelativeLayout>